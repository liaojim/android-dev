<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:key="username" android:title="User Name" android:defaultValue="student"/>
    <EditTextPreference android:key="password" android:title="Password" android:password="true" android:defaultValue="password"/>
    <PreferenceCategory android:title="Performance">
        <ListPreference android:title="Update Interval"
            android:key="interval"
            android:defaultValue="0"
            android:entries="@array/intervals"
            android:entryValues="@array/intervalValues"
            />
    </PreferenceCategory>

</PreferenceScreen>